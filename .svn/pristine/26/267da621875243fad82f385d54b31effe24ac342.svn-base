#header {width:100%; background:url("http://www.lesportsackorea.com/images/common/bg_header.gif")repeat-x scroll 0px 0px }
.header_wrap_inner{position:relative; overflow:hidden; z-index:999; width:960px; margin:0px auto 30px}
.header_wrap_inner a{font-family: "Arial"; font-size:0.75em; font-weight:bold}
.header_wrap_inner .utill_left{float:left; margin-top:60px; }
.header_wrap_inner .utill_left>ul>li{float:left; display: inline-block; margin-left:15px}
.header_wrap_inner .utill_left>ul>li:first-child{margin-left:0px}

.header_wrap_inner .logo{position:absolute; top:45px; left:50%; margin-left:-94px  }
.header_wrap_inner .logo>a{display:block; width:189px; height:46px; background:url("http://www.lesportsackorea.com/images/common/logo.gif")no-repeat scroll 0px 0px; text-indent: -99999px }

.header_wrap_inner .utill_right{float:right; margin-top:47px}
.header_wrap_inner .utill_right>ul>li{float:left; text-indent:-9999px; width:45px; height:45px; margin-left:10px}
.header_wrap_inner .utill_right .icon_instagram{background:url("http://www.lesportsackorea.com/images/common/ico_instagram.png")no-repeat}
.header_wrap_inner .utill_right .icon_cart{background:url("http://www.lesportsackorea.com/images/common/ico_cart.gif")no-repeat}
.header_wrap_inner .utill_right .icon_search{background:url("http://www.lesportsackorea.com/images/common/ico_search.png")no-repeat}


#gnb{display:block; border-top:2px #000 solid; border-bottom:2px #000 solid; height:50px; text-align: center; }
#gnb .gnb{ width:960px; margin:0px auto; text-align:center}
#gnb>ul>li{display:inline-black; position:relative; float:left; width:160px; vertical-align:center }
#gnb>ul>li>a{line-height:50px; font-family:"FuturaHvBTHeavy"; font-size:0.85em}
#gnb>ul>li>.depth1_1:hover,
#gnb>ul>.depth1_1.on{color:#009A9f}
#gnb>ul>li>.depth1_1:hover,
#gnb>ul>.depth1_2.on{color:#009A9f}
#gnb>ul>li>.depth1_1:hover,
#gnb>ul>.depth1_3.on{color:#009A9f}
#gnb>ul>li>.depth1_1:hover,
#gnb>ul>.depth1_4.on{color:#009A9f}
#gnb>ul>li>.depth1_1:hover,
#gnb>ul>.depth1_5.on{color:#009A9f}
#gnb>ul>li>.depth1_1:hover,
#gnb>ul>.depth1_6.on{color:#009A9f}

#gnb>ul>li.depth1>ul{display:none; position:absolute; top:50px; left:0; border:1px #000 solid; border-top:4px #000 solid; width:100%; padding: 20px 0px; }
#gnb>ul>li.depth1>.on{display:block;}
#gnb>ul>li.depth1>ul>li>a{display:block; line-height: 25px; font-family:"FuturaBT-Medium","Nanum Gothic"; font-size:0.75em; color:#999}
#gnb>ul>li.depth1>ul>li>a:hover{color:#333; text-decoration:underline}



