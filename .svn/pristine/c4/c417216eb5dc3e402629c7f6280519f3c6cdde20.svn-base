#container {height:100%;	width:960px;	margin:0 auto;}
#container .main_slide{position:relative; margin-top:30px; margin-bottom:45px}
#container .main_slide>ul{width:960px; height:550px; text-align:center}
#container .main_slide>ul>li{display:inline-block; }
#container .main_slide>ul>li>div{position:absolute; top:0; left:0; background: width:960px; height:500px; overflow:hidden; }
#container .main_slide>ul>li>div>img{ width:100%;}
#container .main_slide>ul>li>a{position:relative; top:520px; z-index:10; background:url("http://www.lesportsackorea.com/images/main/btn_paging.png")no-repeat; text-indent:100%; overflow:hidden; width:11px; height:11px; display:block}
#container .main_slide>ul>li>a:hover{background:url("http://www.lesportsackorea.com/images/main/btn_paging_on.png")no-repeat;}

#container button{display:block; position:absolute; top:50%; z-index:999; margin-top:-25px;text-indent:-99999px; width:50px; height:50px; cursor:pointer}
#container button.next{position:absolute; right:20px; background:url("http://www.lesportsackorea.com/images/main/btn_next.png")}
#container button.prev{position:absolute; left:20px; background:url("http://www.lesportsackorea.com/images/main/btn_prev.png")}
