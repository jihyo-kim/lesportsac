#container {height:100%;	width:960px;	margin:0 auto;}
#container .main_slide{position:relative; margin-top:30px; margin-bottom:45px}
#container .main_slide>ul{width:960px; height:500px;}
#container .main_slide>ul>li{position:absolute; }
#container .main_slide>ul>li>div{border:1px red solid; background: width:960px; height:500px; overflow:hidden; }
#container .main_slide>ul>li>div>img{ width:100%;}
#container .main_slide>ul>li>a{background:url("http://www.lesportsackorea.com/images/main/btn_paging.png")no-repeat; text-indent:-9999px;}


#container button{display:block; position:absolute; top:50%; z-index:999; margin-top:-25px;text-indent:-99999px; width:50px; height:50px}
#container button.next{position:absolute; right:20px; background:url("http://www.lesportsackorea.com/images/main/btn_next.png")}
#container button.prev{position:absolute; left:20px; background:url("http://www.lesportsackorea.com/images/main/btn_prev.png")}
